---
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Poolesville High School's Website Development Club Official Website"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#1B1B1B" />
    <link rel="apple-touch-icon" href="/favicon192.png" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="w-screen bg-neutral-800/25 shadow-md">
      <div
        class="max-w-screen-lg px-2 mx-auto flex justify-between items-center h-16"
      >
        <a href="/" class="sm:text-4xl text-3xl font-bold">PHS Web Dev</a>
        <div class="flex gap-2">
          <a href="/schedule" class="text-xl text-white/75">Schedule</a>
        </div>
      </div>
    </nav>
    <slot />
    <script>
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker.register("/sw.js");
      }
    </script>
  </body>
</html>
<style is:global>
  html {
    @apply bg-neutral-900 text-white;
    font-family: "Open Sans", sans-serif;
  }
</style>
